    <table class="webGrid">
        <thead>
            <tr class="header">
                <td style='width:20px;'> &nbsp; </td>
                <td style='width:20px;'> &nbsp; </td>
                <td style='width:150px;'> Chapter Code </td>
                <td style='width:250px;'> Chapter Name </td>
                <td style='width:20px;'> Exercises </td>
                <td style='width:20px;'> &nbsp; </td>
                <td style='width:20px;'> &nbsp; </td>
            </tr>

        </thead>

    </table>

</div>
