            </div>
            <div>
                <input type="button" value="Reset" style="width:70px;" class="btn btn-primary" onclick="ResetField();" />
            </div>
            <div>
                <input type="button" value="Back" style="width:70px;" class="btn btn-primary" onclick="location.href='@Url.Action("Index","Admin")'" />
            </div>
        </div>
    </div>

</div>

